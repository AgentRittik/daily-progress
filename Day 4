

PROBLEM : YOU HAVE GIVEN A SORTED ARRAY/LIST ARR CONSISTING OF  'N' ELEMENTS . YOU ARA ALSO GIVEN AN INTEGER 'K '
          NOE YOUR TASK IS TO FIND THE FIRST AND LAST OCCURENCE OF 'K' IN ARR.
          
          
CODE : 
      
      
#include <bits/stdc++.h> 
int firstOcc(vector<int>& arr,int n ,int key){
    int s = 0 ,e = n-1;
    int ans = -1;
    int mid  = s +(e-s)/2;
    while (s<=e){
        if(arr[mid] == key){
            e = mid-1;
            ans = mid;
        }
        else if (arr[mid]<key){
            s = mid+1;
        }
        else if (arr[mid]>key){
            e = mid -1;
        }
      mid  = s +(e-s)/2;

    }
 return ans ; 
}

int lastOcc (vector<int>& arr ,int n ,int key){
    int s = 0;
    int e = n-1 ;
    int ans = -1 ;
    int mid  = s +(e-s)/2;

    while (s<=e) {
        if(arr[mid] == key ){
            s = mid + 1;
            ans = mid;
        }
        else if (arr[mid] < key){
            s = mid +1; 

        }
        else if (arr[mid] > key){
            e = mid -1 ;
        }
    
     mid  = s +(e-s)/2;

    }
 return ans ;
}


pair<int, int> firstAndLastPosition(vector<int>& arr, int n, int k)
{
    // Write your code here
    pair< int ,int >p;
    p.first = firstOcc(arr , n , k);
    p.second = lastOcc(arr , n , k);

    return p;   
}
      
